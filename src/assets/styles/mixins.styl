button()
  margin-left: 8px;
  padding: 2px 8px;
  border-radius: 2px;
  text-align: center;
  vertical-align: center;
  background-color: #409eff;
  color: #fff;
  font-size: 16px;
  font-weight: 700;

buttonHover()
  background-color:#66b1ff
  cursor:pointer

input()
  padding-left: 8px;
  border: 1px solid #c0c4cc;
  border-radius: 4px;

floatClear()
  content: '';
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;

fontHover()
  color: #409eff;
  cursor: pointer;